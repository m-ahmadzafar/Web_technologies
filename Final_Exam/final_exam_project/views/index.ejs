<div class="products">
  <h1>Featured Products</h1>
  <table class="products-table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>price</th>
        <th>Category</th>
      </tr>
    </thead>
    <tbody>
      <% products.forEach(product => { %>
        <% if (product.isFeatured) { %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
            <td><%= product.price %></td>
            <td><%= product.category %></td>
          <td><a href="/products/<%= product.id%>"><button>View Product</button></a></td>
          </tr>
        <% } %>
      <% }) %>
    </tbody>
  </table>

  <a href="/products"><button>All Products </button></a>
  <a href="/visited-products"><button>Visited Products </button></a>
</div>

